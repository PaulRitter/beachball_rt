<Control 
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    HorizontalAlignment="Center" VerticalAlignment="Center">
    <PanelContainer Margin="25 25 25 25">
        <CenterContainer Margin="5 5 5 5">
            <BoxContainer Orientation="Vertical" MinSize="100 100">
                <PanelContainer MaxSize="24 24" HorizontalAlignment="Left" StyleClasses="back" Margin="0 0 0 5">
                    <TextureButton Name="BackButton" StyleClasses="back"/>
                </PanelContainer>
                <BoxContainer Orientation="Horizontal">
                    <Label Text="Players" />
                    <Control MinSize="5 0"/>
                    <Button Text="Start Game" Name="StartGameButton"/>
                </BoxContainer>
                <controls:HLine Color="#A5640A" Thickness="2" Margin="0 5 0 5"/>
                <ItemList Name="PlayerList" VerticalExpand="True" SelectMode="Button"/>
            </BoxContainer>
        </CenterContainer>
    </PanelContainer>
</Control>